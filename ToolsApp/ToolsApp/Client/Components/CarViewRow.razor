@if (Car is not null) {
  <tr>
    <td>@Car.Id</td>
    <td>@Car.Make</td>
    <td>@Car.Model</td>
    <td>@Car.Year</td>
    <td>@Car.Color</td>
    <td>@Car.Price</td>
    <td>
      <button>Edit</button>
      <button @onclick="@deleteCar">Delete</button>
    </td>
  </tr>
}

@code {

  [Parameter]
  public Car? Car { get; set; }

  [Parameter]
  public EventCallback<int> OnDeleteCar { get; set; }
  
  private async Task deleteCar()
  {
    if (Car is not null) {
      await OnDeleteCar.InvokeAsync(Car.Id);
    }
  }

}
