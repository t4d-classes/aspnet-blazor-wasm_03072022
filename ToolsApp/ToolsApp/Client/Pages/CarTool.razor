@page "/car-tool"

<header>
  <h3>Car Tool</h3>
</header>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var car in cars)
    {
      <tr>
        <td>@car.Id</td>
        <td>@car.Make</td>
        <td>@car.Model</td>
        <td>@car.Year</td>
        <td>@car.Color</td>
        <td>@car.Price</td>
      </tr>
    }
  </tbody>
</table>
  
@code {


  private List<Car> cars = new() {
    new() { Id = 1, Make = "Tesla", Model = "S", Year = 2020, Color = "blue", Price = 120000 },
    new() { Id = 2, Make = "Tesla", Model = "3", Year = 2019, Color = "red", Price = 45000 },
  };


}
