<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var car in Cars)
    {
      <CarViewRow Car="@car" OnDeleteCar="@deleteCar" />
    }
  </tbody>
</table>

@code {

  [Parameter]
  public IEnumerable<Car> Cars { get; set; } = new List<Car>();

  [Parameter]
  public EventCallback<int> OnDeleteCar { get; set; }

  private async Task deleteCar(int carId)
  {
    await OnDeleteCar.InvokeAsync(carId);
  }

}
